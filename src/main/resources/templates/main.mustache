<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sticky Twits</title>
</head>
<body>
<div>
    <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        <button type="submit">Logout</button>
    </form>
</div>
<h1>Sticky Twits</h1>
<div>
    <form method="post" action="/main">
        <div>
            <label for="text">Enter your message: </label><br>
            <input type="text" id="text" name="text"/><br>
            <label for="tag">Enter tag for message: </label><br>
            <input type="text" id="tag" name="tag"/><br>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        </div>
        <br>
        <button type="submit">Create message!</button>
    </form>
</div>
<br>
<div>
    <form method="post" action="/filter">
        <div>
            <label for="filter">Search message: </label><br>
            <input type="text" id="filter" name="filter"/><br>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        </div>
        <br>
        <button type="submit">Search</button>
    </form>
</div>
<h3>Messages: </h3>
<div>
    {{#messages}}
        <div>
            <p>{{ text }}</p>
            <p>{{ tag }}</p>
            <p>{{ createdAt }}</p>
        </div>
        <hr>
    {{/messages}}
    {{#notification}}
        <p>{{ notification }}</p>
    {{/notification}}
</div>
</body>
</html>